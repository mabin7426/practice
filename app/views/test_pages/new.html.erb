<p><%= link_to "Back", "/test_pages" %></p>

<div class="center hero-unit">
	<h1>New</h1>

	<%= form_tag "/test_pages" do %>
		<p>
			<%= label_tag :subject, "Subject" %>
			<%= text_field_tag :subject, "", size: 80, placeholder: "Enter the subject here" %>
		</p>

		<p>
			<%= label_tag :title, "Title" %>
			<%= text_field_tag :title, "", size: 80, placeholder: "Enter the title here" %>
		</p>

		<p>
			<%= label_tag :priority, "Priority" %>
			<%= text_field_tag :priority, "", size: 80, placeholder: "High, Medium, Low" %>
		</p>

		<p>
			<%= label_tag :duedate, "Due Date" %>
			<%= text_field_tag :duedate, "", size: 80, placeholder: "YYYYMMDD" %>
		</p>

		<p>
			<%= label_tag :notes, "Notes" %>
			<%= text_field_tag :notes, "", size: 80, placeholder: "Enter notes here" %> 

		</p>

		<%= submit_tag "Create a Task" %>

	<% end %>
</div>