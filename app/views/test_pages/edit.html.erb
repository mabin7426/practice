<p><%= link_to "Back", "/test_pages" %></p>

<div class="center hero-unit">
	<h1>Edit</h1>

	<%= form_tag "/test_pages/#{@task.id}", method: 'put' do %>
		<p>
			<%= label_tag :subject, "Subject" %>
			<%= text_field_tag :subject, "", size: 80, placeholder: @task.subject %>
		</p>

		<p>
			<%= label_tag :title, "Title" %>
			<%= text_field_tag :title, "", size: 80, placeholder: @task.title %>
		</p>

		<p>
			<%= label_tag :priority, "Priority" %>
			<%= text_field_tag :priority, "", size: 80, placeholder: @task.priority %>
		</p>

		<p>
			<%= label_tag :duedate, "Due Date" %>
			<%= text_field_tag :duedate, "", size: 80, placeholder: @task.duedate %>
		</p>

		<p>
			<%= label_tag :notes, "Notes" %>
			<%= text_field_tag :notes, "", size: 80, placeholder: @task.notes %> 

		</p>

		<%= submit_tag "Update Task" %>

	<% end %>

</div>